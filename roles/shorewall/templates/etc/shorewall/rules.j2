?SECTION ALL
?SECTION ESTABLISHED
?SECTION RELATED
?SECTION INVALID
?SECTION UNTRACKED
?SECTION NEW

# Drop packets in the INVALID state
{% for i in shorewall_interfaces %}
Invalid(DROP)  {{ i.zone}}                      $FW             tcp
{% endfor %}
#PING
{% for i in shorewall_interfaces %}
Ping/ACCEPT     {{ i.zone }}       $FW
{% endfor %}
#SSH
{% for i in shorewall_interfaces %}
ACCEPT          {{ i.zone }}      $FW               tcp   22
ACCEPT          $FW              {{ i.zone }}        tcp   22
{% endfor %}

#open HTTP port from internet to firewall for all IP
{% for i in shorewall_interfaces %}
HTTP/ACCEPT     {{ i.zone }}                       $FW 
HTTPS/ACCEPT     {{ i.zone }}                   $FW 
{% endfor %}

#open HTTP port from firewall to internet for all IP
{% for i in shorewall_interfaces %}
HTTP/ACCEPT     $FW                     {{ i.zone }}
HTTPS/ACCEPT     $FW                    {{ i.zone }}
{% endfor %}